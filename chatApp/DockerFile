# --- Stage 1: Build the Application ---
# We use a Maven image with Java 21 to build the project
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /app

# Copy only the pom.xml first to cache dependencies (faster builds)
COPY pom.xml .
# Download dependencies (this step will be cached if pom.xml doesn't change)
RUN mvn dependency:go-offline

# Copy the source code and build
COPY src ./src
# Build the jar, skipping tests to save time during deployment
RUN mvn clean package -DskipTests

# --- Stage 2: Run the Application ---
# We use a lightweight Java 21 JRE image for the final container
FROM eclipse-temurin:21-jre-alpine
WORKDIR /app

# Copy the built JAR file from the 'build' stage
# Note: This wildcard *.jar automatically finds your generated jar file
COPY --from=build /app/target/*.jar app.jar

# Expose port 8080 (default for Spring Boot)
EXPOSE 8080

# Run the application
ENTRYPOINT ["java", "-jar", "app.jar"]